@model Etrade.Entities.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<hr />
<form method="post">
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Name)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Surname)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Surname)
        </div>
    </div>
      <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Username)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Username)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Email)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Email)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m=>m.Password)
        </div>
        <div class="col-md-9">
            @Html.EditorFor(m=>m.Password)
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </div>
</form>
